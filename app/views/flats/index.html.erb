<%= render 'nav_bar' %>

<div class="container">
  <h2 class="fw-light fs-4 mt-2">All our flats(<%= @flats.count %>)</h2>

  <div class="row row-cols-3">
    <% @flats.each do |flat| %>
      <div class="col">
        <div class="card mb-1">
          <div class="shadow-sm p-3 mb-1 bg-body rounded card-body">
            <h5 class="card-title"><%= flat.name %></h5>
            <h6 class="card-subtitle mt-1 text-muted"><%= flat.address %></h6>
            <i class="card-text fas fa-user-friends mt-4"></i>
            <%= flat.number_of_guests %>
            <i class="fas fa-pound-sign"></i>
            <%= flat.price_per_night %>
          </div>
          <div class="card-body bg-white">
            <%= link_to 'more info', flat_path(flat), class: "nav-link p-0" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

